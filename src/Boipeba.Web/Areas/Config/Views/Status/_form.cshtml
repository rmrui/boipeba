<div class="modal fade" id="statusModal">
    <div class="modal-dialog modal-md">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Situação</h4>
            </div>
            <div class="modal-body">
                <form  name="statusForm" ng-validate="{}">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label for="Nome">Nome</label>
                                <input type="text" class="form-control required" width="100" id="Nome" name="Nome" ng-model="viewdata.status.Nome" />
                            </div>

                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label for="Descricao">Descrição</label>
                                <input type="text" class="form-control" width="100" id="Descricao" name="Descricao" ng-model="viewdata.status.Descricao" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label for="Fechamento">Situação de Fechamento</label> <br/>
                                <input type="checkbox"  ng-model="viewdata.status.Fechamento" bs-switch switch-on-text="Sim" 
                                       switch-off-text="Não" switch-on-color="primary" switch-off-color="default">
                            </div>
                        </div>
                        <div class="col-lg-6">
                            
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>
                <button type="button" class="btn btn-primary" ng-click="validaForm(statusForm) && salvar(viewdata.status)">Salvar</button>
            </div>
        </div>
    </div>
</div>