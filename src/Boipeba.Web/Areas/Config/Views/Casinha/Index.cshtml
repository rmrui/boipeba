@using System.Web.Mvc.Html
@using System.Web.Optimization

<br />

<div ng-app="boipeba" ng-controller="casinhaCtrl" ng-init="setup()" class="ng-cloak">

    <div class="container bg-azul">
        <div class="row">
            <div class="col-xs-10">Casinhas</div>
            <div class="col-xs-2 text-right">
                <a href="#" class="button-tour" style="color: white; display: none"><span class="fa fa-question-circle"></span><span>&nbsp;Ajuda Interativa</span></a>
            </div>
        </div>
    </div>


    <div class="container bg-branco">
        <br />
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Opções</h3>
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-3 pull-right">
                                <button class="form-control btn btn-success ladda-button" data-style="expand-left" ng-click="nova()">Nova</button>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>

        <hr />

        <loading target="view.loadingList"></loading>

        <table datatable="ng" dt-options="view.dtOptions" class="table table-hover">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Rua</th>
                    <th>Número</th>
                    <th>Data</th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="item in viewdata.list">
                    <td>{{item.Nome}}</td>
                    <td>{{item.Rua}}</td>
                    <td>{{item.Numero}}</td>
                    <td>{{item.Data | jsdate}}</td>
                    <td>
                        <div class="col-lg-6">
                            <button class="form-control btn btn-primary" ng-click="editar(item)">
                                Editar
                                <span class="fa fa-pencil-square-o"></span>
                            </button>
                        </div>
                        <div class="col-lg-6">
                            <button class="form-control btn btn-danger" ng-click="excluir(item)">
                                Excluir
                                <span class="fa fa-ban"></span>
                            </button>
                        </div>

                    </td>
                </tr>
            </tbody>
        </table>
    </div>

    @Html.Partial("_form")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/casinhaCtrl")
}
