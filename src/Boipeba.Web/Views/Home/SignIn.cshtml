@{ 
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<form id="loginform" action="~/Home/SignIn" method="post" role="form" novalidate="novalidate">
            @*@Html.AntiForgeryToken()*@

            <p><br /></p>
            <div class="container">
                <div class="row">
                    <div class="col-md-4 col-md-offset-4">
                        <div class="panel panel-default">
                            <div class="panel-heading text-center">
                                <h3 class="panel-title">Informe Usuário e Senha</h3>
                            </div>


                            <div class="panel-body">

                                @if (ViewData.ModelState.Any(x => x.Value.Errors.Any()))
                                {
                                    <div class="alert alert-danger alert-dismissible" role="alert">
                                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                        @Html.ValidationSummary()
                                    </div>
                                }

                                <fieldset>
                                    <div class="form-group">
                                        <div class="input-group">
                                            <div class="input-group-addon">
                                                <span class="glyphicon glyphicon-user"></span>
                                            </div>
                                            <input typ="text" Id="Username" name="Username" class="form-control required" MaxLength="100" placeholder="Usuário"
                                                   TabIndex="1" required="required" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="input-group">
                                            <div class="input-group-addon">
                                                <span class="glyphicon glyphicon-lock"></span>
                                            </div>
                                            <input type="password" name="Password" class="form-control required" placeholder="Senha" TabIndex="2" required="required" />
                                        </div>
                                    </div>
                                    <div class="checkbox" id="rememberMeDiv">
                                        <label>
                                            <input type="checkbox" id="RememberMe" name="RememberMe" value="true"> Permanecer autenticado neste navegador.
                                        </label>
                                    </div>

                                    <button ID="btnAcessar" class="form-control btn btn-primary ladda-button" data-style="expand-left" data-loading-text="Processando...">
                                        Entrar
                                    </button>

                                </fieldset>
                                <div class="text-info text-right">@ViewBag.Version</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
</form>

@section Scripts {
    @Scripts.Render("~/bundles/loginManager")
}

